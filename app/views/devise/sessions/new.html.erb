<h2 class="page-title">ログイン</h2>


<%= form_for(@shop_user ,url: new_shop_user_session_path) do |f| %>
  <div class="login-form">
    <div class="field">
      <%= f.label :login_id %><br />
      <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", class: "login-input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions" id="login-submit">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
