<h2 class="page-title">店舗情報編集</h2>

<%= form_for(@store, url: store_path) do |f| %>

  <table class="store-form">
    <tr class="field">
      <td class="label"><%= f.label :store_name %><span>&nbsp※必須</span></td>
      <td class="field"><%= f.text_field :store_name, autofocus: true, autocomplete: "store_name", class: "store-input" %></td>
    </tr>

    <tr class="field">
      <td class="label"><%= f.label :phone_num %><span>&nbsp※必須</span></td>
      <td class="field"><%= f.text_field :phone_num, autofocus: true, autocomplete: "phone_num", class: "store-input" %></td>
    </tr>

    <tr class="field">
      <td class="label"><%= f.label :address %><span>&nbsp※必須</span></td>
      <td class="field address">
        <div class="">
          <%= f.label :post_code %>
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "store-input-address" %>
        </div><br />
        <div class="">
          <%= f.label :prefecture_id %>
          <%= f.select :prefecture_id, Store.prefecture_ids.keys, {}, class: "store-input-address" %>
        </div><br />
        <div class="">
          <%= f.label :city %>
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "store-input-address" %>
        </div><br />
        <div class="">
          <%= f.label :block %>
          <%= f.text_field :block, autofocus: true, autocomplete: "block", class: "store-input-address" %>
        </div><br />
        <div class="">
          <%= f.label :building %>
          <%= f.text_field :building, autofocus: true, autocomplete: "building", class: "store-input-address" %>
        </div>
      </td>
    </tr>

    <tr class="field">
      <td class="label"><%= f.label :business_hours %><span>&nbsp※必須</span></td>
      <td class="field">
        <%= f.time_field :business_hours_start, autofocus: true, autocomplete: "business_hours_start", class: "store-hours" %>
        ~
        <%= f.time_field :business_hours_finish, autofocus: true, autocomplete: "business_hours_finish", class: "store-hours" %>
      </td>
    </tr>

    <tr class="field">
      <td class="label"><%= f.label :holiday %><span>&nbsp※必須</span></td>
      <td class="field"><%= f.text_field :holiday, autofocus: true, autocomplete: "holiday", class: "store-input" %></td>
    </tr>

    <tr class="field">
      <td class="label"><%= f.label :home_url %></td>
      <td class="field"><%= f.text_field :home_url, autofocus: true, autocomplete: "home_url", class: "store-input" %></td>
    </tr>

  </table>

  <h2 class="page-title2">注文情報編集</h2>

  <%= f.fields_for :store_order_info do |i| %>

    <table class="store-form">

      <tr class="field">
        <td class="label"><%= i.label :reception_email %><span>&nbsp※必須</span></td>
        <td class="field"><%= i.email_field :reception_email, autofocus: true, autocomplete: "reception_email", class: "store-input" %></td>
      </tr>

      <tr class="field">
        <td class="label"><%= i.label :transport_fee %><span>&nbsp※必須</span></td>
        <td class="field"><%= i.text_field :transport_fee, autofocus: true, autocomplete: "transport_fee", class: "store-input-fee" %>円</td>
      </tr>

      <tr class="field">
        <td class="label"><%= i.label :delivery_reception_time %><span>&nbsp※必須</span></td>
        <td class="field delively_reception">
          <%= i.label :delivery_reception_time_1 %>
          <%= i.time_field :delivery_reception_time_1_first, autofocus: true, autocomplete: "delivery_reception_time_1", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_1_finish, autofocus: true, autocomplete: "delivery_reception_time_1", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_2 %>
          <%= i.time_field :delivery_reception_time_2_first, autofocus: true, autocomplete: "delivery_reception_time_2", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_2_finish, autofocus: true, autocomplete: "delivery_reception_time_2", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_3 %>
          <%= i.time_field :delivery_reception_time_3_first, autofocus: true, autocomplete: "delivery_reception_time_3", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_3_finish, autofocus: true, autocomplete: "delivery_reception_time_3", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_4 %>
          <%= i.time_field :delivery_reception_time_4_first, autofocus: true, autocomplete: "delivery_reception_time_4", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_4_finish, autofocus: true, autocomplete: "delivery_reception_time_4", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_5 %>
          <%= i.time_field :delivery_reception_time_5_first, autofocus: true, autocomplete: "delivery_reception_time_5", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_5_finish, autofocus: true, autocomplete: "delivery_reception_time_5", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_6 %>
          <%= i.time_field :delivery_reception_time_6_first, autofocus: true, autocomplete: "delivery_reception_time_6", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_6_finish, autofocus: true, autocomplete: "delivery_reception_time_6", class: "store-hours" %><br />

          <%= i.label :delivery_reception_time_7 %>
          <%= i.time_field :delivery_reception_time_7_first, autofocus: true, autocomplete: "delivery_reception_time_7", class: "store-hours" %>
          ~
          <%= i.time_field :delivery_reception_time_7_finish, autofocus: true, autocomplete: "delivery_reception_time_7", class: "store-hours" %>
        </td>
      </tr>

      <tr class="field">
        <td class="label"><%= i.label :comment %></td>
        <td class="field"><%= i.text_area :comment, autofocus: true, autocomplete: "comment", class: "store-input-comment" %></td>
      </tr>

    </table>

  <% end %>

  <div class="actions" id="store-submit">
    <%= f.submit '戻る', name: :back, class: "btn btn-secondary" %>
    <%= f.submit "変更する", class: "btn btn-success" %>
  </div>


<% end %>
